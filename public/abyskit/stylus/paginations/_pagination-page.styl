.pagination-page
  list-style none
  margin 0
  padding 0
  font-size 0

  .pagination-page__item
    font-size 13px
    text-transform uppercase
    position relative
    display inline-block
    vertical-align middle

    &:not(:last-child)
      margin-right 15px
      padding-right 15px
      &::after
        position absolute
        top 50%
        margin-top -4px
        right 0
        content ""
        display inline-block
        width 0
        height 0
        border-style solid
        border-width 4px 0 4px 4px
        border-color transparent transparent transparent #9EA7B3

  .pagination-page__link,
  .pagination-page__text
    color inherit
    font-size inherit
    text-transform inherit
    margin 0
    padding 0
    line-height 1

  .pagination-page__text
    color #5bc0de

  .pagination-page__link
    text-decoration none
    &:hover
      text-decoration underline
      color #5bc0de

  .pagination-page__icon
    font-size 18px
    margin 0
    padding 0
