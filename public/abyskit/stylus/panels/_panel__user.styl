.panel-user
  .panel-user__title
    font-size 20px
    font-weight normal
    font-family 'PT Sans Bold', sans-serif
    margin 0

  .panel-user__thumb
    width 150px
    height 150px
    margin 20px auto
    overflow hidden
    border-radius 50%

  .panel-user__img
    width 100%
    height 100%
    object-fit cover