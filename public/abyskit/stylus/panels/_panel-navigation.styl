.panel-navigation
  list-style none
  margin 0
  padding 0
  display block
  width 100%
  background-color rgba(#000, .1)
  box-shadow 0 1px 0 rgba(#000, .1)
  border-radius 4px

  + .panel-navigation
    margin-top 10px

  .panel-navigation__item
    display block
    margin 0

    &:first-child
      padding 10px
      box-sizing border-box

    &.panel-navigation__item--active
      .panel-navigation__link
        border-color #fff
        background-color rgba(#000, .2)
        &::before
          visibility visible

    &.panel-navigation__item--has-count
      position relative

      .panel-navigation__link
        padding-right 40px

      &::after
        content attr(data-count)
        display flex
        position absolute
        top 50%
        right 5px
        background-color #FFA200
        transform translateY(-50%)
        width 20px
        border-radius 50%
        height 20px
        align-items center
        justify-content center
        font-size: 8px
        color #fff
        white-space nowrap
        text-overflow: ellipsis
        overflow hidden
        box-sizing border-box

  .panel-navigation__title
    margin 0
    background-color rgba(#000, .2)
    padding 10px
    display inline-block
    text-transform uppercase
    font-size 11px
    box-sizing border-box
    border-radius 4px
    color #fff

  .panel-navigation__text
    margin 0
    flex-grow 1
    white-space nowrap
    text-overflow: ellipsis
    overflow hidden

  .panel-navigation__link
    width 100%
    margin 0
    padding 10px 20px 10px 28px
    line-height 1.2
    text-decoration none
    color #fff
    font-size 13px
    min-height 50px
    display flex
    align-items center
    position relative
    border-left 2px solid transparent
    background transparent
    box-sizing border-box
    text-transform capitalize

    &::before
      border-bottom 6px solid #ffffff
      border-left 8px solid transparent
      border-right 8px solid transparent
      width 0
      height 0
      position absolute
      margin-top -3px
      top 50%
      left -6px
      content ""
      display block
      visibility hidden
      transform rotate(90deg)

    &:hover
      border-color #fff
      background-color rgba(#000, .2)
      &::before
        visibility visible

  .panel-navigation__icon
    font-size 18px
    width 40px
    flex-shrink 0