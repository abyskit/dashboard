html
  height 100%

body
  font-size 14px
  font-family 'PT Sans Regular', sans-serif
  line-height 1
  min-height 100%
  display flex

h1, h2, h3, h4, h5, h6, strong
  font-weight normal
  font-family 'PT Sans Bold', sans-serif

.h1, .h2, h3, h4, h5, h6
  margin 0

.s-clearfix
  &::after
    content ''
    display block
    clear both

.s-left
  float left

.s-right
  float right

.s-text-right
  text-align right

.s-text-center
  text-align center

.s-text-left
  text-align left

.s-height-inherit
  height 100%

.s-width-inherit
  width 100%

.s-flex
  display flex

  &.s-flex-justify
    justify-content space-between

  &.s-flex-middle
    align-items center

  &.s-flex-center
    justify-content center

  &.s-flex-wrap
    flex-wrap: wrap

  .s-flex-grow
    flex-grow 1

  .s-flex-shrink-false
    flex-shrink 0

.flex-grid-10
  margin-left: -10px

  & > *
    padding-left: 10px
    box-sizing: border-box
    margin-bottom: 10px

.w-12-5
  width: 12.5%

.s-width-auto
  width auto

.s-display-block
  display block

.s-display-inline
  display inline

.s-display-inline-block
  display inline-block

.s-border-top-light
  border-bottom: 1px solid rgba(0,0,0,0.07)

.s-border-bottom-light
  border-bottom: 1px solid rgba(0,0,0,0.07)

.s-border-left-light
  border-bottom: 1px solid rgba(0,0,0,0.07)

.s-border-right-light
  border-bottom: 1px solid rgba(0,0,0,0.07)

.wrapper
  background-image url(../images/body-bg.jpg)
  background-repeat no-repeat
  background-size cover
  background-position center center
  flex 1 0 1200px

.wrapper-flex
  @extend .wrapper
  display flex

  &.wrapper-flex--column
    flex-direction column

.container
  margin 0 auto
  max-width 900px
  width 100%

.logo
  padding 0 10px
  box-sizing border-box
  height: 65px
  display flex
  align-items center

  .logo__wrapper
    display flex
    align-items flex-end

  .logo__title
    color #fff
    text-decoration: none
    font-size: 30px
    display flex
    align-items flex-end
    text-transform: uppercase

    > span
      color #FFA200

  .logo__version
    box-sizing border-box
    font-size: 12px
    padding 5px
    margin 0 0 0 5px
    background-color rgba(0,0,0,.2)
    border-radius 4px
    color #fff

.box
  border 1px solid rgba(0,0,0,0.07)
  border-radius 4px
  padding 15px
  box-sizing border-box
  position relative

  .box__remove
    text-decoration: none
    position absolute
    right 5px
    top 5px
    color rgba(0,0,0,.2)

    &:hover
      color rgba(0,0,0,.3)


.badge
  display inline-block
  padding 3px 6px
  text-transform uppercase
  font-size 10px
  border 1px solid rgba(0, 0, 0, 0.04)
  background-color #fff
  color #aaa
  font-family 'PT Sans Regular', sans-serif
  border-radius 4px

  &.badge--primary
    border-color #5bc0de
    background-color #5bc0de
    color #fff

  &.badge--success
    border-color #45B6B0
    background-color #45B6B0
    color #fff

  &.badge--danger
    border-color #FF6B6B
    background-color #FF6B6B
    color #fff

.circle
  width 50px
  height 50px
  border-radius 50%
  border 1px solid rgba(0, 0, 0, 0.04)
  color #aaa
  background-color #fff
  display inline-block

  &.circle--primary
    background-color #5bc0de
    border-color #5bc0de
    color #fff

  &.circle--success
    background-color #45B6B0
    border-color #45B6B0
    color #fff

  &.circle--danger
    background-color #FF6B6B
    border-color #FF6B6B
    color #fff

  &.circle--warning
    background-color #FFA200
    border-color #FFA200
    color #fff

  &.circle--extra-small
    width 10px
    height 10px

.alert
  padding 10px
  border-radius 4px
  box-sizing border-box
  border 1px solid rgba(0, 0, 0, 0.04)
  color #aaa

  &.alert--margin
    margin 15px 0

  &.alert--success
    border-color #45B6B0

    .alert__text
      color #45B6B0

  &.alert--primary
    border-color #5bc0de

    .alert__text
      color #5bc0de

  &.alert--danger
    border-color #FF6B6B

    .alert__text
      color #FF6B6B

  &.alert--warning
    border-color #FFA200

    .alert__text
      color #FFA200

.link
  color #5bc0de
  text-decoration: none
  
  &:hover
    text-decoration: underline

.paragraph
  margin 0

.button
  display inline-block
  padding 6px 12px
  font-size 14px
  font-weight normal
  text-align center
  cursor pointer
  color #aaa
  border: none
  background-color rgba(0, 0, 0, 0.04)
  text-decoration none
  border-radius 4px
  outline none
  text-transform lowercase
  font-family 'PT Sans Regular', sans-serif
  box-sizing border-box
  line-height 1.2

  &::first-letter
    text-transform capitalize

  &:hover,
  &.button--active
    background-color rgba(0, 0, 0, 0.07)

  &.button--small
    padding 5px 8px
    font-size 11px

  &.button--icon
    padding 0
    height 25px
    width 25px
    text-align center
    font-size: 0

    .button__icon
      display inline-block
      vertical-align middle
      font-size 12px

    &::before
      content ''
      height 100%
      display inline-block
      vertical-align middle

  &.button--icon-text   
    
    .button__icon,
    .button__text
      display inline-block
      vertical-align middle
      
    .button__text
      &:first-letter
        text-transform: uppercase

    &::before
      content ''
      height 100%
      display inline-block
      vertical-align middle

  &.button--primary
    background-color #5bc0de
    color #fff
    &:hover
      background-color #5bc0de * .9

  &.button--success
    background-color #45B6B0
    color #fff
    &:hover
      background-color #45B6B0 * .9

  &.button--danger
    background-color #FF6B6B
    color #fff
    &:hover
      background-color #FF6B6B * .9

.thumbnail-input
  margin-left 10px
  margin-top 19px
  border-radius 4px
  box-sizing border-box
  display flex
  align-items center
  justify-content center
  text-align center
  width 400px
  height 250px
  border: 10px solid #fff
  box-shadow 0 0 1px #000
  position relative

  .thumbnail-input__image
    background-position center
    background-size cover
    position absolute
    background-color #eee
    top 0
    left 0
    right 0
    bottom 0
    z-index 1

  .thumbnail-input__context
    position relative
    z-index: 2
    background rgba(255,255,255,.7)
    border-radius 4px
    color #000
    padding 10px

.header
  height 65px
  border-bottom 1px solid rgba(0,0,0,.2)
  margin-bottom 15px

.content-area
  width 100%
  background-color #f5f5f5
  color #9EA7B3

  .content-area__header
    position relative
    width 100%
    height 70px
    background #f5f5f5
    box-sizing border-box
    padding 10px 15px 10px 75px

    &::before
      content ""
      position absolute
      top 0
      left 0
      border-width 0 42px 42px 0
      border-style solid
      border-color #f5f5f5 #324b6e
      box-shadow 0 0 0 rgba(0, 0, 0, 0.4), 0 0 10px rgba(0, 0, 0, 0.4)
      transform rotate(-90deg)

  .content-area__bar
    background-color rgba(0, 0, 0, 0.02)
    border-bottom 1px solid rgba(0, 0, 0, 0.04)
    border-top 1px solid rgba(0, 0, 0, 0.04)
    padding 15px 15px 15px 30px
    box-sizing border-box

  .content-area__content
    background-color #f5f5f5
    min-height 900px
    padding 30px
    box-sizing border-box

  .content-area__title
    margin 0
    font-size 16px
    color #9EA7B3
    text-transform uppercase
    width 100%

.error
  .error__title
    font-size: 50px
    color #fff
    letter-spacing 1

  .error__text
    color #fff
    font-size: 24px

  .error__icon
    color #FFA200

  .error__link
    text-decoration: none
    color #FFA200

    &:hover
      text-decoration: underline

  .error__text-small
    color #fff

.pt-10
  padding-top: 10px