.table
  width 100%
  padding 0
  margin 0
  border-collapse collapse

  .table__column-head,
  .table__column
    text-align left
    margin 0
    vertical-align top
    padding 8px
    box-sizing border-box

  .table__column-head
    border-top 1px solid #ddd
    border-right 1px solid #ddd
    border-bottom 2px solid #ddd
    border-left 1px solid #ddd
    font-family 'PT Sans Bold', sans-serif
    font-weight normal
    text-transform capitalize
    color #9ea7b3
    font-size 13px

    &:nth-last-child(2)
      text-align center

  .table__column
    border 1px solid #ddd
    font-size 13px
    vertical-align middle
    white-space nowrap
    width 1px

    &:nth-child(2)
      width auto

    &:last-child,
    &:nth-last-child(2),
    &:nth-last-child(3)
      text-align center

    &.table__column--initial
      text-align left
      vertical-align top

  .table__row
    padding 0
    margin 0