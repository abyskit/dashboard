.list-activities
  list-style none
  margin 0
  padding 0

  .list-activities__item
    padding 5px

    + .list-activities__item
      border-top 1px solid #dddddd

  .list-activities__title
    font-size 15px
    margin 0 0 10px 0

  .list-activities__link
    color #9ea7b3
    text-decoration none

    &:hover
      color $color-danger